# ============================================
# VARIÁVEIS DE AMBIENTE - PRODUÇÃO
# ============================================

# Configurações da Aplicação
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# URL Pública da Aplicação
PUBLIC_URL=https://leman.casadf.com.br
VITE_API_URL=https://leman.casadf.com.br

# Chave Secreta para JWT (JSON Web Token)
# IMPORTANTE: Gere uma chave segura e a substitua aqui
# Exemplo no terminal: openssl rand -base64 32
JWT_SECRET="sua_chave_secreta_super_segura_aqui"

# Configurações do Banco de Dados (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=leman_user
DB_PASSWORD="uma_senha_forte_para_o_banco"
DB_NAME=leman_db
DATABASE_URL="postgresql://leman_user:uma_senha_forte_para_o_banco@postgres:5432/leman_db"

# Configurações do Redis (Cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de OAuth (Google, etc.)
# Substitua pelos seus IDs e segredos de cliente
GOOGLE_CLIENT_ID="seu_google_client_id_aqui"
GOOGLE_CLIENT_SECRET="seu_google_client_secret_aqui"

# Configurações de Armazenamento (Ex: S3)
# Substitua pelas suas chaves de acesso e segredos
STORAGE_ACCESS_KEY="seu_storage_access_key_aqui"
STORAGE_SECRET_KEY="seu_storage_secret_key_aqui"
STORAGE_BUCKET="seu_storage_bucket_aqui"
STORAGE_REGION="sua_storage_region_aqui"
STORAGE_ENDPOINT="seu_storage_endpoint_aqui"

# Domínio para o Certbot (Let's Encrypt)
CERTBOT_DOMAIN=leman.casadf.com.br
CERTBOT_EMAIL="seu_email_para_notificacoes_do_certbot@exemplo.com"
