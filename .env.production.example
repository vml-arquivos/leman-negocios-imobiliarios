# ============================================
# VARIÁVEIS DE AMBIENTE - PRODUÇÃO
# ============================================
# Copie este arquivo para .env.production e preencha com seus valores reais
# NUNCA commite o arquivo .env.production no Git

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://leman_user:YOUR_SECURE_PASSWORD@postgres:5432/leman_imoveis
DB_PASSWORD=YOUR_SECURE_PASSWORD

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=5000
BASE_URL=https://lemanimoveis.com.br

# ============================================
# AUTHENTICATION
# ============================================
SESSION_SECRET=YOUR_SESSION_SECRET_CHANGE_THIS_IN_PRODUCTION_MIN_32_CHARS
JWT_SECRET=YOUR_JWT_SECRET_CHANGE_THIS_IN_PRODUCTION_MIN_32_CHARS

# ============================================
# N8N INTEGRATION
# ============================================
N8N_USER=admin
N8N_PASSWORD=YOUR_N8N_PASSWORD
N8N_HOST=n8n.lemanimoveis.com.br
N8N_WEBHOOK_URL=https://n8n.lemanimoveis.com.br
N8N_FINANCING_WEBHOOK_URL=https://n8n.lemanimoveis.com.br/webhook/financing

# ============================================
# STORAGE (S3 ou LOCAL)
# ============================================
STORAGE_TYPE=local
# Se usar S3:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app-gmail
SMTP_FROM=contato@lemanimoveis.com.br

# ============================================
# AI / LLM APIs
# ============================================
# OpenAI
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# Google Gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# ============================================
# SUPABASE (OPCIONAL)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=YOUR_SUPABASE_ANON_KEY

# ============================================
# GOOGLE MAPS
# ============================================
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# ============================================
# PATHS DE DADOS (DOCKER VOLUMES)
# ============================================
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
APP_UPLOADS_PATH=./data/uploads
APP_STORAGE_PATH=./data/storage
NGINX_CACHE_PATH=./data/nginx_cache
NGINX_LOGS_PATH=./data/nginx_logs
N8N_DATA_PATH=./data/n8n

# ============================================
# SEGURANÇA
# ============================================
# Habilitar HTTPS (requer certificados SSL)
# Certificados devem estar em ./nginx/ssl/
# - fullchain.pem
# - privkey.pem

# ============================================
# LOGS
# ============================================
LOG_LEVEL=info
